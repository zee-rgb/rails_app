# Global environment example
# Copy to .env and adjust values as needed

# Rails web app URL (used by other services if needed)
APP_HOST=localhost
APP_PORT=3000
APP_URL=http://localhost:3000

# AI service URL
# For Docker Compose networks
AI_SERVICE_URL=http://ai_service:8000
# For local development without Docker networking, uncomment below
# AI_SERVICE_URL=http://localhost:8000

# Redis
# For Docker Compose networks
REDIS_URL=redis://redis:6379/1
# For local development without Docker, uncomment below
# REDIS_URL=redis://localhost:6379/1
