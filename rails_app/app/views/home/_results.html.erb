<div class="bg-white shadow-md rounded-lg p-6">
  <h2 class="text-xl font-semibold mb-4">Analysis Results</h2>

  <div class="space-y-4">
    <div>
      <span class="font-medium">Original Text:</span>
      <p class="mt-1 text-gray-600"><%= last_text %></p>
    </div>

    <div>
      <span class="font-medium">Processed Text:</span>
      <p class="mt-1 text-gray-600"><%= analysis[:processed_text] %></p>
    </div>

    <div>
      <span class="font-medium">Sentiment:</span>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium capitalize
                <%= analysis[:sentiment] == "positive" ? "bg-green-100 text-green-800" :
                    analysis[:sentiment] == "negative" ? "bg-red-100 text-red-800" :
                    "bg-yellow-100 text-yellow-800" %>">
        <%= analysis[:sentiment] %>
      </span>
    </div>

    <div>
      <span class="font-medium">Confidence:</span>
      <div class="w-full bg-gray-200 rounded-full h-2.5 mt-1">
        <% confidence = (analysis[:confidence] || 0).to_f %>
        <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= (confidence * 100).to_i %>%"></div>
      </div>
      <p class="text-sm text-gray-500 mt-1"><%= (confidence * 100).round(1) %>% confidence</p>
    </div>
  </div>
</div>
