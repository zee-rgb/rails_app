<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center mb-8">AI Integration Demo</h1>
  
  <% if flash[:error].present? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
      <span class="block sm:inline"><%= flash[:error] %></span>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded-lg p-6 mb-8">
    <h2 class="text-xl font-semibold mb-4">Try the AI Analysis</h2>
    
    <%= form_with(url: analyze_path, method: :post, class: "space-y-4", data: { turbo: true }) do |form| %>
      <div>
        <%= form.label :text, "Enter text to analyze:", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :text, 
                          rows: 4, 
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                          placeholder: "Type something to analyze the sentiment...", value: @last_text %>
      </div>
      
      <div>
        <%= form.submit "Analyze Text", 
                      class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <%= turbo_frame_tag "results" do %>
    <% if @analysis.present? %>
      <%= render partial: "home/results", locals: { analysis: @analysis, last_text: @last_text } %>
    <% end %>
  <% end %>
</div>
